#

if [ $# -lt 2 ]; then
    logger -t openvpn "Not enough script parameters"
    exit 3
fi

instance=$1
config=$2

uinstance=$(uci -q get openvpn.$common_name.instance)
if [ "$uinstance" != "$instance" ]; then
    exit 2
fi

enabled=$(uci -q get openvpn.$common_name.enabled)
if [ "$enabled" == "0" ]; then
    exit 1
fi
