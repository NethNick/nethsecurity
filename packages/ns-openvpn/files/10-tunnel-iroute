if [ $# -lt 2 ]; then
    logger -t openvpn "Not enough script parameters"
    exit 3
fi

. /lib/functions.sh

instance=$1
config=$2

handle_route() {
    local route="$1"
    echo "iroute $route" >> $config
}

config_load openvpn
config_list_foreach "$instance" route handle_route
