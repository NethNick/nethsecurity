# Create a user certificate
instance=$1
user=$2
expiration=${3:-3600}
if [ -z "$instance" ] || [ -z "$user" ]; then
    exit 1
fi

cd /etc/openvpn/$instance
EASYRSA_CERT_EXPIRE=$expiration EASYRSA_BATCH=1 /usr/bin/easyrsa build-client-full "$user" nopass
