# Create a user and a certificate
instance=$1
user=$2
if [ -z "$instance" ] || [ -z "$user" ]; then
    exit 1
fi

cd /etc/openvpn/$instance
EASYRSA_BATCH=1 /usr/bin/easyrsa build-client-full "$user" nopass
uci set openvpn."$user"=user
uci set openvpn."$user".enabled=1
uci set openvpn."$user".instance=$instance
uci commit openvpn
