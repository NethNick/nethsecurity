import sys
import pyotp
import subprocess
from euci import EUci

def slurp(path):
    with open(path) as fp:
        return fp.read()

def hostname():
    with open('/proc/sys/kernel/hostname', 'r') as fp:
        return fp.read().strip()


instance=sys.argv[1]
user=sys.argv[2]

u = EUci()
cert_dir=f"/etc/openvpn/{instance}/pki"

try:
    user_obj = u.get_all("openvpn", user)
except:
    sys.exit(2)

if user_obj.get("instance") != instance:
    sys.exit(3)

secret = u.get("openvpn", user, "2fa", default="")
uri = pyotp.totp.TOTP(secret).provisioning_uri(name=f"{user}@{hostname()}", issuer_name="OpenVPN")
if secret:
    p = subprocess.run(["/usr/bin/qrencode", "-t", "svg", uri], capture_output=True, text=True)
    print(p.stdout)
else:
    sys.exit(4)
